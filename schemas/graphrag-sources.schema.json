{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GraphRAG Sources Manifest",
  "type": "object",
  "required": ["version", "sources"],
  "properties": {
    "version": {
      "type": "string"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "description", "enabled", "ingestion", "chunking"],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["structured", "unstructured", "semi-structured"]
          },
          "description": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          },
          "ingestion": {
            "type": "object"
          },
          "chunking": {
            "type": "object"
          }
        }
      }
    }
  }
}
